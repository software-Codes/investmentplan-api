# Application
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your_jwt_secret_key_here

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Smile ID (KYC Verification)
SMILE_ID_API_KEY=your_smile_id_api_key
SMILE_ID_PARTNER_ID=your_partner_id
SMILE_ID_CALLBACK_URL=http://localhost:3000/api/v1/kyc/callback

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_KYC_CONTAINER=your_container_name

# Africa's Talking (SMS)
AFRICASTALKING_API_KEY=your_africastalking_api_key
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_SENDER_ID=your_sender_id

# Email (Nodemailer)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
ADMIN_EMAIL=admin@yourplatform.com
ADMIN_DASHBOARD_URL=https://admin.yourplatform.com

# Deposit Configuration
DEPOSIT_ADDRESS=0x54af84786bc0386d44fe908b2946f7f50c0f513f
MIN_DEPOSIT_USD=10
MAX_DEPOSIT_USD=100000
ADMIN_SYNC_ENABLED=true
ADMIN_SYNC_INTERVAL_MS=60000

# MongoDB Atlas (Deposit Logging)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=investmentplan

# Binance (Payment Integration)
BINANCE_ROOT_URL=https://bpay.binanceapi.com
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
ADMIN_BINANCE_ADDRESS=your_admin_address
DEPOSIT_POLLING_INTERVAL=60000

# Super Admin
SUPER_ADMIN_NAME=Super Admin
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=secure_password

# CORS (Optional)
# CORS_ORIGIN=http://localhost:3000

# Sentry (Error Monitoring - Optional)
# SENTRY_DSN=your_sentry_dsn
